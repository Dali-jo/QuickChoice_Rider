<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="517dp"
        android:padding="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/imageView4" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:srcCompat="@color/cardview_light_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="134dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="출발지"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="도착지"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="픽업시간"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="가격"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"

                                android:gravity="center"
                                android:text="물품정보"
                                android:textSize="18dp"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="기타사항"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <!--<TextView-->
                                <!--android:id="@+id/textView15"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="64dp"-->
                                <!--android:layout_marginTop="10dp"-->
                                <!--android:gravity="center"-->
                                <!--android:text="기타사항"-->
                                <!--android:textSize="18dp"-->
                                <!--android:textStyle="bold" />-->
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tender_info_start"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:text="카테고리"
                                android:background="@drawable/circlebutton"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/tender_info_desti"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:text="금액 : "
                                android:background="@drawable/circlebutton"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/tender_info_pickup"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:text="픽업 시간 : "
                                android:background="@drawable/circlebutton"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/tender_info_money"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:text="도착지"
                                android:background="@drawable/circlebutton"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/tender_info_category"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:text="출발지"
                                android:background="@drawable/circlebutton"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/tender_info_memo"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:text="출발지"
                                android:background="@drawable/circlebutton"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:textSize="20dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!--<TextView-->
                        <!--android:id="@+id/tender_info_payment"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="TextView" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/tender_info_ditance"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="TextView" />-->


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/tender_info_tdbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="입찰"
            android:textSize="20dp" />

        <Button
            android:id="@+id/send_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 전송"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>